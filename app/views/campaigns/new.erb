<h1>Start A New Campaign</h1>
<p>Note: Since you are starting a new compaign, you shall be Dungeon Master by default.</p>

<%= form_for(@campaign) do |f| %>
  <%= f.hidden_field :completed, value: false %>
  <div class="form-group">
  <%= f.label :title, "Campaign Title: " %>
  <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group">
  <%= f.label :expect_number_of_meetups, "Expected Number of Meetup: " %>
  <%= f.number_field :expect_number_of_meetups, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :max_number_of_characters, "Max Number of Characters: " %>
  <%= f.number_field :max_number_of_characters, class: "form-control"%>
  </div>
  <div class="form-group">
  <%= f.label :difficulty, "Difficulty: " %>
  <%= f.number_field :difficulty, class: "form-control"%>
  </div>
  <%= f.submit class: "btn btn-secondary" %>
<% end %>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <span style="color: red;"><%= error %></span> &nbsp
  <% end %>
<% end %>
