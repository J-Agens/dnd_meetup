
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="heading-1">Campaigns</h1>

      <%= button_to "Create New", new_campaign_path, method: "get", class: "my-btn btn-secondary"%>
      <hr>
      </div>
  </div>
    <div class="row">
        <% @campaigns.each do |campaign| %>
        <div class="col-md-4">
          <div class="campaign-card">
            <p class="heading-p"><%= link_to campaign.title, campaign_path(campaign) %></p>
            <ul>
              <li>Title: <%= campaign.title %></li>
              <li>Expected Number of Meetups: <%= campaign.expect_number_of_meetups %></li>
              <li>Difficulty: <%= campaign.difficulty %></li>
              <li>Max Number of Characters: <%= campaign.max_number_of_characters %></li>
            </ul>
          </div>
        </div>
        <% end %>
    </div>
</div>
