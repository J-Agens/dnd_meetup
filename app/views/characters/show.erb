<h3 class="show-char-name"><%= @character.char_name %></h3>

<ul>
  <li>Current campaign: <%= @character.campaign.title %></li>
  <li>Alignment: <%= @character.alignment %></li>
  <li>Race: <%= @character.race %></li>
  <li>Weapon: <%= @character.weapon %></li>
  <li>Level: <%= @character.level %></li>
  <li>Class: <%= @character.klass %></li>
</ul>

<button type="button" class="btn"><%= link_to "Edit", edit_character_path(@character), class: "edit-char-btn" %></button>
